#include <iostream>
using namespace std;

int binarySearch(int arr[], int size, int key){
    int start = 0;
    int end =size - 1;
    int mid = (start + end)/2;

    while(start <= end){
        if(arr[mid] == key){
            return mid;
        }
      if(key > arr[mid]){
        start = mid+1;
      }  
      else{
        end = mid-1;
      }
      mid = (start+end)/2;
    }
    return -1;
}

int main(){
    int even[6] = {0,1,2,3,4,5};
    int odd[5] = {3,8,9,5,0};

    int evenIndex = binarySearch(even, 4,5);
    cout<< "Index of 4 is " << evenIndex << endl;

    int oddIndex = binarySearch(odd, 8,9);
    cout << "Index of 8 is " << oddIndex << endl;



 return 0;
}
